import React, { useState } from 'react';
import { 
  View, Text, TextInput, TouchableOpacity, StyleSheet, 
  Alert, ScrollView, KeyboardAvoidingView, Platform, Modal 
} from 'react-native';

export default function AddServiceScreen({ route, navigation }) {
  const { vehicleId, plaka } = route.params;
  const [loading, setLoading] = useState(false);
  const [showPicker, setShowPicker] = useState(false);
  
  const bugun = new Date().toISOString().split('T')[0];

  const [form, setForm] = useState({
    islem_tipi: 'Periyodik BakÄ±m',
    km_bilgisi: '',
    maliyet: '',
    aciklama: '',
    islem_tarihi: bugun
  });

  const islemTipleri = ["Periyodik BakÄ±m", "ArÄ±za OnarÄ±m", "Lastik/Jant", "YaÄŸ DeÄŸiÅŸimi", "DiÄŸer"];

  const handleSave = async () => {
    if (!form.maliyet) {
      Alert.alert("UyarÄ±", "LÃ¼tfen maliyet alanÄ±nÄ± doldurun.");
      return;
    }

    setLoading(true);
    try {
      const formData = new FormData();
      formData.append('vehicle_id', vehicleId);
      formData.append('islem_tipi', form.islem_tipi);
      formData.append('km_bilgisi', form.km_bilgisi);
      formData.append('maliyet', form.maliyet);
      formData.append('aciklama', form.aciklama);
      formData.append('islem_tarihi', form.islem_tarihi);

      const response = await fetch('https://dgnbatuhan.online/filo/api_add_service.php', {
        method: 'POST',
        body: formData,
      });

      const data = await response.json();
      if (data.status === 'success') {
        Alert.alert("BaÅŸarÄ±lÄ±", "Servis kaydÄ± baÅŸarÄ±yla eklendi.", [
          { text: "Tamam", onPress: () => navigation.goBack() }
        ]);
      } else {
        Alert.alert("Hata", data.message || "Bir sorun oluÅŸtu.");
      }
    } catch (error) {
      Alert.alert("Hata", "Sunucu baÄŸlantÄ±sÄ± kurulamadÄ±.");
    } finally {
      setLoading(false);
    }
  };

  return (
    <KeyboardAvoidingView behavior={Platform.OS === "ios" ? "padding" : "height"} style={{ flex: 1 }}>
      <ScrollView style={styles.container}>
        <View style={styles.card}>
          <Text style={styles.headerTitle}>ðŸ“„ Servis ve Belge KaydÄ±</Text>
          
          <View style={styles.infoBox}>
            <Text style={styles.infoText}><Text style={{fontWeight:'bold'}}>AraÃ§:</Text> {plaka}</Text>
          </View>

          <View style={styles.row}>
            <View style={styles.col}>
              <Text style={styles.label}>Ä°ÅŸlem Tarihi</Text>
              <TextInput 
                style={styles.input} 
                value={form.islem_tarihi} 
                onChangeText={(v) => setForm({...form, islem_tarihi: v})}
              />
            </View>
            <View style={styles.col}>
              <Text style={styles.label}>Ä°ÅŸlem Tipi</Text>
              <TouchableOpacity 
                style={styles.pickerTrigger} 
                onPress={() => setShowPicker(true)}
              >
                <Text style={styles.pickerTriggerText}>{form.islem_tipi} â–¾</Text>
              </TouchableOpacity>
            </View>
          </View>

          <View style={styles.row}>
            <View style={styles.col}>
              <Text style={styles.label}>Mevcut KM</Text>
              <TextInput 
                style={styles.input} 
                keyboardType="numeric"
                placeholder="0"
                value={form.km_bilgisi}
                onChangeText={(v) => setForm({...form, km_bilgisi: v})}
              />
            </View>
            <View style={styles.col}>
              <Text style={styles.label}>Maliyet (TL)</Text>
              <TextInput 
                style={styles.input} 
                keyboardType="numeric"
                placeholder="0.00"
                value={form.maliyet}
                onChangeText={(v) => setForm({...form, maliyet: v})}
              />
            </View>
          </View>

          <Text style={styles.label}>AÃ§Ä±klama</Text>
          <TextInput 
            style={[styles.input, {height: 80, textAlignVertical: 'top'}]} 
            multiline 
            placeholder="YapÄ±lan iÅŸlemler hakkÄ±nda kÄ±sa notlar..."
            value={form.aciklama}
            onChangeText={(v) => setForm({...form, aciklama: v})}
          />

          <TouchableOpacity style={styles.saveBtn} onPress={handleSave} disabled={loading}>
            <Text style={styles.saveBtnText}>{loading ? "KAYDEDÄ°LÄ°YOR..." : "KAYDET"}</Text>
          </TouchableOpacity>
        </View>

        {/* SeÃ§im MenÃ¼sÃ¼ */}
        <Modal visible={showPicker} transparent animationType="slide">
          <View style={styles.modalOverlay}>
            <View style={styles.modalContent}>
              <Text style={styles.modalTitle}>Ä°ÅŸlem Tipi SeÃ§in</Text>
              {islemTipleri.map((item) => (
                <TouchableOpacity 
                  key={item} 
                  style={styles.modalItem}
                  onPress={() => {
                    setForm({...form, islem_tipi: item});
                    setShowPicker(false);
                  }}
                >
                  <Text style={styles.modalItemText}>{item}</Text>
                </TouchableOpacity>
              ))}
              <TouchableOpacity onPress={() => setShowPicker(false)} style={styles.modalClose}>
                <Text style={{color: 'red', fontWeight: 'bold'}}>Kapat</Text>
              </TouchableOpacity>
            </View>
          </View>
        </Modal>
      </ScrollView>
    </KeyboardAvoidingView>
  );
}

const styles = StyleSheet.create({
  container: { flex: 1, backgroundColor: '#f1f2f5', padding: 15 },
  card: { backgroundColor: '#fff', borderRadius: 15, padding: 20, shadowColor: '#000', shadowOpacity: 0.1, elevation: 3 },
  headerTitle: { fontSize: 18, fontWeight: 'bold', marginBottom: 15, color: '#333' },
  infoBox: { backgroundColor: '#e9ecef', padding: 12, borderRadius: 8, marginBottom: 20 },
  infoText: { fontSize: 14, color: '#495057' },
  row: { flexDirection: 'row', justifyContent: 'space-between', marginBottom: 15 },
  col: { width: '48%' },
  label: { fontSize: 13, fontWeight: 'bold', color: '#333', marginBottom: 8 },
  input: { borderWidth: 1, borderColor: '#ced4da', borderRadius: 8, padding: 10, fontSize: 14, backgroundColor: '#fff' },
  pickerTrigger: { borderWidth: 1, borderColor: '#ced4da', borderRadius: 8, padding: 10, height: 45, justifyContent: 'center', backgroundColor: '#fff' },
  pickerTriggerText: { fontSize: 14, color: '#333' },
  saveBtn: { backgroundColor: '#007bff', padding: 15, borderRadius: 10, alignItems: 'center', marginTop: 20 },
  saveBtnText: { color: '#fff', fontWeight: 'bold', fontSize: 16 },
  modalOverlay: { flex: 1, backgroundColor: 'rgba(0,0,0,0.5)', justifyContent: 'flex-end' },
  modalContent: { backgroundColor: '#fff', padding: 20, borderTopLeftRadius: 20, borderTopRightRadius: 20 },
  modalTitle: { fontSize: 16, fontWeight: 'bold', marginBottom: 15, textAlign: 'center' },
  modalItem: { paddingVertical: 15, borderBottomWidth: 1, borderBottomColor: '#eee' },
  modalItemText: { fontSize: 16, textAlign: 'center' },
  modalClose: { marginTop: 15, padding: 10, alignItems: 'center' }
});